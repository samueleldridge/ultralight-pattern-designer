# ============================================================================
# AI Analytics Platform - Environment Configuration
# SECURITY: Never commit this file with real keys!
# ============================================================================

# ----------------------------------------------------------------------------
# AI MODEL CONFIGURATION (Kimi K2.5 - Primary)
# ----------------------------------------------------------------------------
# Get your API key from: https://platform.moonshot.cn/
KIMI_API_KEY=your-kimi-api-key-here
KIMI_BASE_URL=https://api.moonshot.cn/v1
KIMI_MODEL=kimi-k2.5

# Fallback/OpenAI (optional)
OPENAI_API_KEY=optional-openai-backup-key
OPENAI_MODEL=gpt-4-0125-preview

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
# Option 1: Local Docker (default for testing)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/aianalytics

# Option 2: Supabase (for production)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# ----------------------------------------------------------------------------
# CACHE & QUEUE
# ----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# ----------------------------------------------------------------------------
# AUTHENTICATION (Clerk - optional for MVP)
# ----------------------------------------------------------------------------
CLERK_SECRET_KEY=sk_test_placeholder
CLERK_PUBLISHABLE_KEY=pk_test_placeholder

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=generate-a-random-secret-key-here

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
DEBUG=true
APP_NAME="AI Analytics Platform"

# ----------------------------------------------------------------------------
# EVALUATION & TESTING
# ----------------------------------------------------------------------------
# Set to "true" to enable detailed logging
LOG_LEVEL=INFO

# Enable evaluation mode (tracks all queries for accuracy testing)
ENABLE_EVALUATION=true
